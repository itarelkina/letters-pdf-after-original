<!DOCTYPE html>
<html>
  <head>
    <title>AIP Letters</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
<div id="container">  
      <nav >
        <a class="navbar-brand" href="#">AIP Letters</a>
        <div>
          <ul >
            <li>
              <%= link_to 'See All Letters', letters_path, class: 'nav-link' %> | <%= link_to 'See All Records', records_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </nav>
</div>
    <div id="container">  
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
